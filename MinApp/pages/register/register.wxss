.first_tab .doctors_item {
    display: flex;
    border-bottom: 1px solid #ccc;
  } 
  .first_tab .doctors_item .doctors_img_wrap {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .first_tab .doctors_item .doctors_img_wrap image {
    width: 70%;
  }
  .first_tab .doctors_item .doctors_info_wrap {
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }
  .first_tab .doctors_item .doctors_info_wrap .doctors_name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
  .first_tab .doctors_item .doctors_info_wrap .doctors_introduction {
    color: var(--themeColor);
    font-size: 32rpx;
    height: 150rpx;
  }
  .first_tab .doctors_item .doctors_info_wrap .yuyue {
    color: var(--themeColor);
    font-size: 32rpx;
  }